}


int main(void){

    int x = 5;
    int y = 5;
    /*int murIndes = 176;
    int murDes = 173;
    int espace = 32;*/

    char murIndes = 'X';
    char murDes = 'm';
    char perso = 'p';
    char espace = ' ';

    printf("x = \n");
    scanf("%d", &x); //nombre de colonnes

    printf("y = \n");
    scanf("%d", &y); //nombre de lignes

    int tailleTotal = x*y;

    char** map = malloc(sizeof(char)*500);

    for(int i = 0; i < x; i++){
        for (int j = 0; j < y; ++j) {

            //if(i == 0 || j == 0)
            map[i][j] = murIndes;


            //printf(" %c ", map[i][j]);
            if (i == 0 || i == x - 1) {//muraille haut et bas
                if (j == y - 1) {
                    printf("%c\n", map[i][j]);
                    break;
                }
                printf("%c", map[i][j]);
            } else {//muraille droite et gauche
                if (j == 0) {
                    printf("%c", map[i][j]);
                }
                if (j == y - 1) {
                    printf("%c\n", map[i][j]);
                    //break;
                } else {
                    printf("%c", espace);
                }
            };
        }
    }
    free(map);
    return  0;
}
